<% @page_title = '7.am Invitation' %>
<%= draw_crumbs %>

<% content_for :actions do %>
	<ul>
	  <li><%= link_to "New Group", new_group_path %></li>
	  <li><%= link_to "Browse Public Groups", browse_public_groups_path %></li>
	</ul>
<% end %>

<% content_for :stories do %>
	<ul>
		<% if @groups.length > 0 %>
			<%= render :partial => 'group', :collection => @groups %>
		<% else %>
			<li>You do not belong to any groups. Use the link above to create a group
				of your own and invite your friends to it!</li>
		<% end %>
	</ul>
<% end %>
