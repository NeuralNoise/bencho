<% @page_title = "7.am Invitation" %>

<% content_for :formholder do %>
  <div style="background-color: #E8FECD; border:1px solid #A9BF74;margin: 10px 3px 5px; padding: 6px;">
  	<h3 style="padding:5px">Connect with your most valuable social network - the friends and family in your mobile phonebook.</h3>
  </div>
	<% form_for @user, :url => process_invitation_path(@code), :method => :post do |f| %>
	  <ul style="background-color: #E8FECD; border:1px solid #A9BF74;margin: 10px 3px 5px; padding: 6px;">
			<li>Hi <%= @kontact.kontact_information.f %> - welcome to 7.am! To accept your invitation from <%= @inviter.f %> please complete the form below.</li>
      <li><%= f.label 'Username' -%><%= f.text_field :login, :value => @user.login %></li>
   		<li><%= f.label 'Password' -%><small>Be tricky! Your password should be at least 4 characters and not a dictionary word or common name. Change your password on occasion</small><%= f.password_field :password, :value => @user.password %></li>
      <li><%= f.label 'Mobile Number' -%><%= text_field_tag :phone_number,'', :value => params[:phone_number] || @mobile %></li>
			<li><%= check_box_tag :user_terms_of_service, 1, params[:terms_of_service], :checked => 'checked', :class => 'checkbox', :name => 'user[terms_of_service]' %><label> I accept the terms</label></li>
	    <li><%= f.submit 'Sign up', :disable_with => "Signing up.." %></li> 
			<li>Already have an account? Click <%= link_to 'here', login_path %> to login.</li>
			<li>
				Forgot your password? Click <%= link_to "here", forgot_password_path %>.
			</li>
			<li>
				Want to know what mobile experience you can expect from your <%= @wurfl_device.brand %> <%= @wurfl_device.model %>? Click <%= link_to "here", "http://icon.stsp.co.za/Downloads.aspx?a=22" %>.
			</li>
		</ul>
	<% end %>
<% end %>
	
