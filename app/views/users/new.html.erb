<%	terms_of_service_label = "Accept #{link_to 'Terms of Service', tos_path, :target => 'blank'}" %><div id="login_form">    <% form_for :user, :url => register_path, :method => :post do |f| %>	    <div class="clearfix">        <h1 class="plainheader"><%= "Sign Up" %></h1>        <p class="smaller">            Enter your details to sign up to 7.am - it's free<br />	<%= link_to 'Already have an account?', login_path %>        </p>    </div>    <div class="loginfields clearfix">        <label>Username</label>        <%= f.text_field :login %>    </div>    <div class="loginfields clearfix">		<label>Password</label>        <%= f.password_field :password %>    </div>    <div class="loginfields clearfix">        <label>Mobile Number</label>        <%= text_field_tag :phone_number %>    </div>    <div class="checkboxfields clearfix">        <%= check_box_tag :user_terms_of_service, 1, params[:terms_of_service], :checked => 'checked', :class => 'checkbox', :name => 'user[terms_of_service]' %>        <label for="user_terms_of_service">            Accept <a target="blank" href="/tos">Terms of Service</a>        </label>    </div>    <div class="buttonfields">        <%= f.submit 'Sign-up Now' %>    </div><% end %></div>